<UserControl x:Class="wally.Views.UserControls.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wally.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Grid.Column="0">
            <!--This one should change based on the radio button-->
            <ListBox x:Name="ListBoxLibrary" SelectionMode="Single" Visibility="Visible">
                <ListBoxItem  Content="Your wallpaper Nature"/>
                <ListBoxItem Content="Your wallpaper Anime"/>
                <ListBoxItem Content="Your wallpaper Sport"/>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Column="0">
            <!--This one should change based on the radio button-->
            <ListBox x:Name="ListBoxStore" SelectionMode="Single" Visibility="Collapsed">
                <ListBoxItem  Content="Nature"/>
                <ListBoxItem Content="Anime"/>
                <ListBoxItem Content="Sport"/>
            </ListBox>
        </StackPanel>

    </Grid>
</UserControl>
